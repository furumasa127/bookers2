<p id="notice"></p>
<h1>User info</h1>
<p><%= image_tag user.get_profile_image(100,100) %></p>
<table>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <th>introduction</th>
  <th><%= user.introduction %></th>
  </table class="table">
  <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
  <script src="https://kit.fontawesome.com/9c11671e7c.js" crossorigin="anonymous"></script>
  <i class="fa-solid fa-user-gear" style="color: #4f5763;"></i>
  <% end %>
  <h1>New book</h1>
  <%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book', class: 'btn btn-success' %>
  <% end %>
