
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3"><%= render 'list' , book: @book, user: @user %>
    </div>
  <div class="col-md-8 offset-md-1">

<h1>Book detail</h1>

  <p><%= image_tag @books.user.get_profile_image(100,100) %></p>

  <%= link_to user_path(@user.id) do %>
  <%= @user.name %>
  <% end %>

  <%= link_to book_path(@books.id) do %>
  <%= @books.title %>
  <% end %>

  <%= @books.body %>

  <% if @books.user == current_user %>
  <p><%= link_to "edit", edit_book_path(@books.id) %></p>
  <% end %>

 <% if @books.user == current_user %>
 <%= link_to "destroy", book_path(@books), method: :delete %>
 <% end %>

</div>
</div>
</div>