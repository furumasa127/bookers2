<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      
      <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <div class="container">
                    <script src="https://kit.fontawesome.com/9c11671e7c.js" crossorigin="anonymous"></script>
                    <i class="fa-solid fa-house" style="color: #f2f2f2;"></i>
                    <%= link_to "Home", user_path(current_user.id), class: "nav-link text-light" %>
                  </div>
                </li>
                <li>
                  <div class="container">
                    <i class="fa-solid fa-users" style="color: #ffffff;"></i>
                    <%= link_to "Users", users_path, class: "nav-link text-light" %>
                  </div>
                </li>
                <li>
                  <div class="container">
                    <i class="fa-solid fa-book-open" style="color: #ffffff;"></i>
                    <%= link_to "Books", books_path, class: "nav-link text-light" %>
                  </div>
                </li>
                <li>
                  <div class="container">
                    <i class="fa-solid fa-right-from-bracket" style="color: #ffffff;"></i>
                    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link text-light" %>
                  </div>
                </li>
              <% else %>
                <li>
                  <div class="container">
                    <i class="fa-solid fa-house" style="color: #f2f2f2;"></i>
                    <%= link_to "Home", root_path, class: "nav-link text-light" %>
                  </div>
                </li>
                <li>
                  <div class="container">
                    <i class="fa-solid fa-link" style="color: #ffffff;"></i>
                    <%= link_to "About", home_about_path, class: "nav-link text-light" %>
                  </div>
                </li>
                <li>
                  <div class="container">
                    <i class="fa-solid fa-user-plus" style="color: #ffffff;"></i>
                    <%= link_to "Sign up", new_user_registration_path, class: "nav-link text-light" %>
                  </div>
                </li>
                <li>
                  <div class="container">
                    <i class="fa-solid fa-right-to-bracket" style="color: #ffffff;"></i>
                    <%= link_to "Log in", new_user_session_path, class: "nav-link text-light" %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer>
      <div class="container-mt5">
        <div class="row">
          <div class="mx-auto">
             <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
